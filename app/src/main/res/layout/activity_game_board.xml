<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.edwardlafontant.tic_attack_toe.Game_board">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A0"
        android:layout_alignTop="@+id/A1"
        android:layout_toLeftOf="@+id/A1"
        android:layout_toStartOf="@+id/A1"
        android:text="A0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A1"
        android:layout_above="@+id/B1"
        android:layout_centerHorizontal="true"
        android:text="A1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/A2"
        android:layout_alignTop="@+id/A1"
        android:layout_toRightOf="@+id/A1"
        android:layout_toEndOf="@+id/A1"
        android:text="A2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B0"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/B1"
        android:layout_toStartOf="@+id/B1"
        android:text="B0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B1"
        android:layout_alignBottom="@+id/B0"
        android:layout_alignLeft="@+id/A1"
        android:layout_alignStart="@+id/A1"
        android:text="B1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/B2"
        android:layout_alignBottom="@+id/B1"
        android:layout_toRightOf="@+id/B1"
        android:layout_toEndOf="@+id/B1"
        android:text="B2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C0"
        android:layout_below="@+id/B0"
        android:layout_toLeftOf="@+id/B1"
        android:layout_toStartOf="@+id/B1"
        android:text="C0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C1"
        android:layout_alignBottom="@+id/C0"
        android:layout_alignLeft="@+id/B1"
        android:layout_alignStart="@+id/B1"
        android:text="C1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/C2"
        android:layout_alignBottom="@+id/C1"
        android:layout_toRightOf="@+id/C1"
        android:layout_toEndOf="@+id/C1"
        android:text="C2" />
</RelativeLayout>
